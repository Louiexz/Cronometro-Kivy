<Cronometro>:
    orientation: "vertical"

    BoxLayout:
        Label:
            text: ""
        Label:
            text: "Horas"
        Label:
            text: ""
        Label:
            text: "Minutos"
        Label:
            text: ""
        Label:
            text: "Segundos"
        Label:
            text: ""

    BoxLayout:
        Label:
            text: ""
        TextInput:
            text: "00"
            id: horas
        Label:
            text: ""
        TextInput:
            text: "00"
            id: minutos
        Label:
            text: ""
        TextInput:
            text: "00"
            id: segundos
        Label:
            text: ""

    BoxLayout:
        Button:
            text: "[color=00ee00]Iniciar[/color]"
            on_press: app.root.cronometro_iniciar()
        Button:
            text: "[color=00ee00]Reverter[/color]"
            on_press: app.root.cronometro_reverter()
        Button:
            text: "[color=ee0000]Parar[/color]"
            on_press: app.root.cronometro_parar()

<Button@BUtton>:
    markup: True
    size_hint_x: 0.33

<Label@Label>:
    font_size: "24sp"
    size_hint_x: 0.25

<TextInput@TextInput>:
    font_size: "26sp"
    halign: "center"
    foreground_color: 1, 1, 1, 1
    background_color: 0, 0, 0, 0.9
    input_filter: "int"
    multiline: "False"
